<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Product Image -->
        <ImageView
            android:id="@+id/iv_cart_product_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/product_espresso"
            android:scaleType="centerCrop"
            android:layout_marginEnd="12dp"
            android:contentDescription="Product Image" />

        <!-- Product Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Espresso"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/coffee_dark"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/tv_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 25.000"
                android:textSize="14sp"
                android:textColor="@color/text_secondary" />

        </LinearLayout>

        <!-- Quantity Controls -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="12dp">

            <!-- Quantity Control Row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_rounded_light"
                android:layout_marginBottom="4dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_decrease"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:text="-"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/coffee_primary"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:padding="0dp" />

                <TextView
                    android:id="@+id/tv_quantity"
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/coffee_dark"
                    android:gravity="center" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_increase"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:text="+"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/coffee_primary"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:padding="0dp" />

            </LinearLayout>

            <!-- Subtotal -->
            <TextView
                android:id="@+id/tv_subtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 25.000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/coffee_primary" />

        </LinearLayout>

        <!-- Remove Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_remove"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:text="Ã—"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/error_color"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="0dp"
            app:cornerRadius="18dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
